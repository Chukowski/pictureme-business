FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy auth server
COPY auth-server-simple.js .

# Expose port
EXPOSE 3002

# Environment variables will be provided by Dokploy
# Required: DATABASE_URL, BETTER_AUTH_SECRET, AUTH_PORT

# Start auth server
CMD ["node", "auth-server-simple.js"]

